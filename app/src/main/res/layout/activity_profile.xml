<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_of_activity"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/profile"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/UserName"
                    android:textColorHint="@color/strokeColor"
                    app:boxStrokeColor="@color/strokeColor"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_LastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/UserLastName"
                    android:textColorHint="@color/strokeColor"
                    app:boxStrokeColor="@color/strokeColor"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_LastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_E_mainID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/UserEmailID"
                    android:textColorHint="@color/strokeColor"
                    app:boxStrokeColor="@color/strokeColor"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_EmailID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/UserPhoneNumber"
                    android:textColorHint="@color/strokeColor"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:maxLength="10" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_Input_PinCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/UserPinCode"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_PinCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_LoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/loan_amount"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_LoanAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/birth_date"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/genderP"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_Gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Profession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/professionP"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_Profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_Imcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/incomeP"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_Income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtInput_PanCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/panCard_Number"
                    android:textColorHint="@color/strokeColor"
                    app:counterMaxLength="6"
                    app:endIconDrawable="@drawable/right"
                    app:endIconMode="custom"
                    app:endIconTint="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_PanCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:backgroundTint="#0F4C75"
                    android:ems="8"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="@string/btnSubmitP"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/_5sdp" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>